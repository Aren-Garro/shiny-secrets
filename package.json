{
  "name": "shiny-secrets",
  "version": "2.1.0",
  "description": "Fast, lightweight secret scanner with 21+ detection patterns, entropy analysis, and zero dependencies. Detect hardcoded API keys, tokens, and credentials before they reach production.",
  "main": "scanner.js",
  "types": "types/index.d.ts",
  "bin": {
    "shiny-secrets": "./scanner.js",
    "shiny-secrets-v2": "./scanner-v2.js"
  },
  "scripts": {
    "test": "jest",
    "test:legacy": "node test.js && node test-v2.js",
    "test:v1": "node test.js",
    "test:v2": "node test-v2.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "scan": "node scanner.js",
    "scan:v2": "node scanner-v2.js",
    "scan:staged": "node scanner-v2.js --scan-staged --fail-on=critical",
    "lint": "eslint *.js lib/**/*.js tests/**/*.js",
    "lint:fix": "eslint *.js lib/**/*.js tests/**/*.js --fix",
    "prepublishOnly": "npm test",
    "validate": "npm test && npm run lint",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "security",
    "secrets",
    "scanning",
    "credentials",
    "api-keys",
    "tokens",
    "static-analysis",
    "code-security",
    "secret-detection",
    "aws",
    "github",
    "stripe",
    "google",
    "slack",
    "sendgrid",
    "cli",
    "git-hooks",
    "pre-commit",
    "ci-cd",
    "sarif",
    "entropy",
    "devsecops",
    "typescript"
  ],
  "author": "Aren Garro LLC <contact@arengarro.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aren-Garro/shiny-secrets.git"
  },
  "bugs": {
    "url": "https://github.com/Aren-Garro/shiny-secrets/issues"
  },
  "homepage": "https://aren-garro.github.io/shiny-secrets/",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "scanner.js",
    "scanner-v2.js",
    "lib/",
    "types/",
    "pre-commit",
    ".shinysecretsrc.example",
    "README.md",
    "LICENSE"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Aren-Garro"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
    }
  }
}
