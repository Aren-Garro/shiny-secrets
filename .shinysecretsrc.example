# Shiny Secrets Configuration File
# Place this as .shinysecretsrc in your project root

# Exit code behavior
# Options: "critical" (default), "high", "any", "never"
failOn: "critical"

# Severity threshold for reporting
# Options: "critical", "high", "medium"
reportThreshold: "medium"

# Entropy detection settings
entropy:
  enabled: true
  threshold: 4.7
  minLength: 20
  maxLength: 100

# Paths to exclude from scanning
exclude:
  - "**/node_modules/**"
  - "**/dist/**"
  - "**/build/**"
  - "**/.git/**"
  - "**/*.min.js"
  - "**/*.bundle.js"
  - "**/vendor/**"
  - "**/third_party/**"

# File extensions to scan
include:
  - "*.js"
  - "*.ts"
  - "*.jsx"
  - "*.tsx"
  - "*.py"
  - "*.java"
  - "*.go"
  - "*.rb"
  - "*.php"
  - "*.env"
  - "*.config"
  - "*.yaml"
  - "*.yml"
  - "*.json"

# Known findings to allowlist (baseline)
# Format: "file:line:type"
allowlist:
  - "config/test.js:12:AWS Access Key"
  - "examples/demo.js:5:Stripe Test API Key"

# Patterns to allowlist (regex)
allowPatterns:
  - "EXAMPLE"
  - "TEST_KEY"
  - "DEMO_"
  - "PLACEHOLDER"
  - "your-api-key-here"

# Custom patterns (advanced)
# Uncomment and customize as needed
# customPatterns:
#   my_service_key:
#     name: "My Service API Key"
#     regex: "myservice_[a-zA-Z0-9]{32}"
#     description: "Custom service key"
#     severity: "HIGH"

# Disable specific built-in patterns
disabledPatterns:
  # - "jwt_token"  # Uncomment to disable JWT detection
  # - "password_field"  # Uncomment to disable password detection
